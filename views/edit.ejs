<%- include('header')%>
<div class="container">
    
        <h1 style="text-align: center;">
            Edit <%=campground.name %>
        </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.name%>" name="data[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%=campground.price %>" name="data[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">

                    <input class="form-control" type="text" value="<%=campground.image%>" name="data[image]">
                </div>
                <div class="form-group">

                    <input class="form-control" type="text" value="<%=campground.description%>" name="data[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Update</button>
                </div>
        
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
            

    
    
</div>
<%- include('footer')%>